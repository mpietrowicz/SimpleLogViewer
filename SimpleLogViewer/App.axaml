<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:SimpleLogViewer"
             x:Class="SimpleLogViewer.App"
             xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
             >

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
    <Application.Resources>
        <themes:BundledTheme BaseTheme="Dark" PrimaryColor="BlueGrey" SecondaryColor="Lime"/>
    </Application.Resources>
    <Application.Styles>
        <FluentTheme Mode="Dark"/>
        <StyleInclude Source="avares://Material.Avalonia/Material.Avalonia.Templates.xaml" />
        <StyleInclude Source="avares://Material.Icons.Avalonia/App.xaml"></StyleInclude>
    </Application.Styles>
</Application>